    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:__hb_wpf_71"
    x:Class="__hb_wpf_71.CMainWindow"
    ResizeMode="CanMinimize" SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterScreen">
    <Grid x:Name="_pnlrt" Width="1000" Height="800">
        <local:RxImageVisualContainer x:Name="_rxivc"/>

        <Button x:Name="_btn1" Content="Button1"
            HorizontalAlignment="Right" VerticalAlignment="Bottom"
            Width="75" Margin="0,0,10,10"
            Click="pf__btn1_Click"/>
        <Button x:Name="_btn2" Content="Button2"
            HorizontalAlignment="Right" VerticalAlignment="Bottom"
            Width="75" Margin="0,0,90,10"
            Click="pf__btn2_Click"/>
    </Grid>
</Window>
